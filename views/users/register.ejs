<% layout('layouts/boilerplate') -%>
  <div class="row">
    <h1 class="text-center">Register</h1>
    <div class="col-6 offset-3">
      <form action="/user/register" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
          <label class="form-label" for="username">username</label>
          <input class="form-control" type="text" name="user[username]" id="username" required>
        </div>
        <div class="mb-3">
          <label class="form-label" for="email">email</label>
          <input class="form-control" type="email" name="user[email]" id="email" required>
        </div>
        <div class="mb-3">
          <label class="form-label" for="password">password</label>
          <input class="form-control" type="password" name="user[password]" id="password" required>
        </div>
        <button class="btn btn-success" type="submit">Register</button>
      </form>
    </div>
  </div>