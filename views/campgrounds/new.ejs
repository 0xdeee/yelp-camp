<% layout('layouts/boilerplate') -%>
  <div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
      <!-- enctype="multipart/form-data" is required to send files in form body -->
      <form action="/campgrounds" method="POST" class="needs-validation" enctype="multipart/form-data" novalidate>
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input class="form-control" type="text" name="campground[title]" id="title" required>
        </div>
        <div class="mb-3">
          <label class="form-label" for="location">Location</label>
          <input class="form-control" type="text" name="campground[location]" id="location" required>
        </div>
        <div class="mb-3">
          <label class="form-label" for="image">Image</label>
          <input class="form-control" type="file" name="campground[image]" id="image" multiple required>
        </div>
        <div class="mb-3">
          <label class="form-label" for="price">Price</label>
          <div class="input-group mb-3">
            <span class="input-group-text">$</span>
            <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" name="campground[price]"
              id="price" required>
            <span class="input-group-text">.00</span>
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="description">Description</label>
          <textarea class="form-control" name="campground[description]" id="description" rows="3" required></textarea>
        </div>
        <button class="btn btn-success" type="submit">create</button>
      </form>
      <br><br>
      <a href="/campgrounds">home</a>
    </div>
  </div>